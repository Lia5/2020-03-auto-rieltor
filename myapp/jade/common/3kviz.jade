section.kviz#kviz
    .wrap
        .kviz__title Ответьте на 5 вопросов и получите 3 варианта автомобиля на выбор
        .kviz-qa
            form(class="quizForm" action="send.php" method="post")
                .step-slide.step-slide--active
                    .step__body
                        .step-slide__title Какой у вас бюджет на покупку авто?
                        .kviz__ans.question__ans--radio
                            label.pick-item(for="step1-1")
                                input#step1-1.pick-item__input(type='radio', name='question1', value='До $12 000')
                                span.pick-item__label До $12 000
                            label.pick-item(for="step1-2")
                                input#step1-2.pick-item__input(type='radio', name='question1', value='От $12 000 до $25 000')
                                span.pick-item__label От $12 000 до $25 000
                            label.pick-item(for="step1-3")
                                input#step1-3.pick-item__input(type='radio', name='question1', value='От $25 000 до $ 50 000')
                                span.pick-item__label От $25 000 до $ 50 000 
                            label.pick-item(for="step1-4")
                                input#step1-4.pick-item__input(type='radio', name='question1', value='От $50 000 и более')
                                span.pick-item__label От $50 000 и более
                        .step-slide__bottom
                            .kviz-progress
                                .kviz-progress__title 1 вопрос из 5
                                .kviz-progress__steps
                                    .kviz-progress__item.active
                                    .kviz-progress__item
                                    .kviz-progress__item
                                    .kviz-progress__item
                                    .kviz-progress__item
                            .prev-next-container
                                .kviz__error
                                a.btn.btn-next.qa-next(href='#') Далее
                    .step__sidebar
                        img(src="img/qa1.jpg", alt="авто")
                .step-slide
                    .step__body
                        .step-slide__title Как вы будете использовать  автомобиль чаще всего?
                        .kviz__ans.question__ans--text
                            label.pick-item(for="step2-1")
                                input#step2-1.pick-item__input(type='radio', name='question2', value='Для частого  передвижения по городу')
                                span.pick-item__label Для частого передвижения по городу
                            label.pick-item(for="step2-2")
                                input#step2-2.pick-item__input(type='radio', name='question2', value='Для поездок в пригород  и сельскую местность')
                                span.pick-item__label Для поездок в пригород  и сельскую местность
                            label.pick-item(for="step2-3")
                                input#step2-3.pick-item__input(type='radio', name='question2', value='Для дальних поездок')
                                span.pick-item__label Для дальних поездок
                        .step-slide__bottom
