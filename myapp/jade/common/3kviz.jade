                        .kviz__ans.question__ans--radio
                            label.pick-item.qa-last(for="step5-1")
                                input#step5-1.pick-item__input(type='radio', name='question5', value=' В моем городе и области')
                                span.pick-item__label  В моем городе и области
                            label.pick-item.qa-last(for="step5-2")
                                input#step5-2.pick-item__input(type='radio', name='question5', value='В моем городе, области  и в соседних областях')
